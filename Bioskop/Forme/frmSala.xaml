<Window x:Class="Bioskop.Forme.Sala"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bioskop.Forme"
        mc:Ignorable="d"
        Title="Izmeni/Dodaj salu" Height="250" Width="300">
    <Grid>
        <Label Content="Broj sale:" HorizontalAlignment="Left" Margin="26,33,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtBrojSale" HorizontalAlignment="Left" Margin="150,37,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Film:" HorizontalAlignment="Left" Margin="26,91,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="cbFilm" HorizontalAlignment="Left" Margin="150,91,0,0" VerticalAlignment="Top" Width="120" DisplayMemberPath="Ime" SelectedValuePath="FilmID"/>
        <Button Name="btnSacuvaj" Content="Sacuvaj" HorizontalAlignment="Left" Margin="43,164,0,0" VerticalAlignment="Top" Width="50" Click="btnSacuvaj_Click"/>
        <Button Name="btnOtkazi" Content="Otkazi" HorizontalAlignment="Left" Margin="185,164,0,0" VerticalAlignment="Top" Width="50" Click="btnOtkazi_Click" />

    </Grid>
</Window>
